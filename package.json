{
  "name": "github-action-gitflow-release-workflow",
  "version": "0.1.4",
  "main": "index.js",
  "author": "Thomas Eizinger <thomas@eizinger.io>",
  "license": "MIT",
  "scripts": {
    "cm": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@digitalroute/cz-conventional-changelog-for-jira": "^6.2.0",
    "commitizen": "^4.2.3",
    "husky": "^4.3.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "minHeaderWidth": 12,
      "rules": {"config-conventional/subject-case": ["sentence-case", "start-case", "pascal-case", "upper-case"]}
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {}
}
